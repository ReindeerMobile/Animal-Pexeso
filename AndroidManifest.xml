<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reindeermobile.pexeso"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="8" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- <uses-permission android:name="android.permission.CAMERA" /> -->
    <application
        android:name="com.reindeermobile.pexeso.view.PexesoApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name=".view.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.NewGameActivity"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.GameActivity"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".view.ToplistActivity"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:screenOrientation="portrait" >
        </activity>
    </application>
</manifest>